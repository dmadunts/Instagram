<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="profile_text" parent="text">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="profile_text_count" parent="text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <dimen name="toolbar_height">50dp</dimen>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@color/whiteish</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/toolbar_height</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="toolbar_text" parent="toolbar_title">
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="edit_profile_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edit_profile_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginStart">23dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="big_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/big_input_bg</item>
    </style>

    <style name="big_btn" parent="big_input">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@animator/btn_animator</item>
    </style>

    <style name="follow_btn">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@animator/btn_animator</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="following_btn">
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@animator/btn_animator</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
</resources>
